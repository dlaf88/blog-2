<header class="intro-header" style="background-image: url(https://diego-blog.s3.amazonaws.com/uploads/post/post_image/6/darkbackground.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>Older Posts</h1>                        
                    </div>
                </div>
            </div>
        </div>
 </header>

<% @posts.each do |post| %>
    <div class="container">        
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">                
                    <div id='admin-tags'>
                      <a href=<%= post_path(post)%>>
                        <h2 class="post-title"><%= post.title %></h2>
                      </a> 
                    </div><!-- link tag -->
                    <div id='admin-fa'>
                      <a href='<%= edit_post_path(post)%>'><i class="fa fa-pencil"></i></a>
                      <%= link_to '', post, method: :delete, class: 'fa fa-trash-o', data: { confirm: "Are you sure you want to delete this Post?" } %>

                      
                    </div><!-- font awesome icons -->                                                                                                
            </div><!-- column description end -->     
    </div><!--container end -->
   <hr>
<% end %>
<div align='center'>
<%= will_paginate @posts %>
</div>

